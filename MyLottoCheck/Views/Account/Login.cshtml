@using MyLottoCheck.Models
@model LoginViewModel

@{
    ViewBag.Title = "MyLottoCheck";
}

<head>
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
</head>

<body>

@*@using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))*@
@using (Html.BeginForm("Login", "Account", new { area = "" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))

{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="login-container">
                <div class="space-6"></div>
                <div class="position-relative">
                    <div id="login-box" class="login-box visible widget-box no-border">
                        <div class="widget-body">
                            <div class="widget-main">
                                <h4 class="header blue lighter bigger">
                                    <i class="ace-icon fa fa-coffee green"></i>
                                    Login
                                </h4>
                                
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <fieldset>
                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-left">
                                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                        <i class="ace-icon fa fa-envelope"></i>
                                                    </span>
                                    </label>

                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-left">
                                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                        <i class="ace-icon fa fa-lock"></i>
                                                    </span>
                                    </label>

                                    <div class="space"></div>

                                    <div class="clearfix">
                                        <label class="inline">
                                            @Html.CheckBoxFor(m => m.RememberMe)
                                            <span class="lbl"> Remember Me</span>
                                        </label>

                                        <button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
                                            <i class="ace-icon fa fa-key"></i>
                                            <span class="bigger-110">Login</span>
                                        </button>
                                    </div>
                                    <hr />
                                    Not registered yet?<br /> 
                                    @Html.RouteLink("Click here to register", "Root", new { action = "Register", controller = "Account" })
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}    
</body>
@Scripts.Render("~/bundles/site")
@Scripts.Render("~/bundles/login")
